<Window x:Class="Layouts.DockPlusStack"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Layouts"
        mc:Ignorable="d"
        Title="DockPlusStack" Height="450" Width="800">
    <DockPanel>
        <StackPanel DockPanel.Dock="Left" Width="120" Margin="0,48,0,0" >
            <Button Content="Menu1" Height="50" Margin="0 2"/>
            <Button Content="Menu1" Height="50" Margin="0 2"/>
            <Button Content="Menu1" Height="50" Margin="0 2"/>
            <Button Content="Menu1" Height="50" Margin="0 2"/>
            <Button Content="Menu1" Height="50" Margin="0 2"/>
        </StackPanel>

        <TextBlock DockPanel.Dock="Top" HorizontalAlignment="Center" VerticalAlignment="Center" Height="50" Padding="0,15,0,0">
            TITRE DE MON APP
        </TextBlock>
        <TextBlock DockPanel.Dock="Bottom" HorizontalAlignment="Center">
            Copyright......
        </TextBlock>
        <Button Content="Center"/>
    </DockPanel>
</Window>
